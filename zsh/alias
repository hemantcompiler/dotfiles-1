# GIT
alias gst="git status"
alias gwc="git whatchanged"
alias gco="git checkout"
alias gcob="git checkout -b"
alias gpoat="git push origin --all --tag"
alias gb="git branch"
alias gl="git log"
alias gd="git diff"
alias gc="git commit"
alias gca="git commit -a"

# SYMFONY
alias sf="php bin/console"

# SSH
alias archie="ssh archie@192.168.1.53"

# MISC
alias tnsh='tmux new -s $(pwd | sed "s/\/.*\///g" | sed "s/\n//g")'

alias l="ls -l"
alias ll="ls -lah"

alias v="nvim"
alias vv="vim" # will be improved
alias vimrc="vim ~/.vimrc"
alias nvimrc="v ~/.config/nvim/init.vim"

alias f='$EDITOR $(fzf)'
alias vf='v $(fzf)'
alias fv='vf'

alias zshrc="v ~/.zshrc"

alias xup="xrdb ~/.Xresources"
# alias shot=" scrot \'%Y-%m-%d_$wx$h.png\' -e \'mv $f /tmp\' "

alias :q="exit"
alias :e="v"

alias _="sudo"
alias __="sudo -E"

alias grep="grep --color=always"

alias ed="ed -p:"
alias info="info --vi-keys"

alias post_json="curl -H \"Content-Type: application/json\" -X POST -d"

alias ssh_fix="(ssh-agent zsh ; ssh-add)"
alias sx="startx"
alias setx="setxkbmap"

# hide from history
alias pwsafe=" pwsafe"
alias cd=" cd"
alias ls=" ls"
